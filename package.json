{
  "name": "jacob-website",
  "description": "Jacob's personal website",
  "version": "1.0.0",
  "author": "Jacob Cofman <cofman.jacob@gmail.com>",
  "dependencies": {
    "@jacobmischka/gatsby-plugin-react-svg": "^1.1.0",
    "gatsby": "^1.9.270",
    "gatsby-cli": "^1.1.58",
    "gatsby-link": "^1.6.44",
    "gatsby-plugin-react-helmet": "^2.0.11",
    "gatsby-plugin-styled-components": "^2.0.11",
    "gatsby-plugin-webpack-bundle-analyzer": "^0.1.1",
    "gatsby-source-filesystem": "^1.5.38",
    "gatsby-transformer-remark": "^1.7.42",
    "react-helmet": "^5.2.0",
    "react-icons": "^2.2.7",
    "serve": "^8.1.4",
    "styled-components": "^3.3.2",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@octokit/rest": "^15.8.2",
    "bundlesize": "^0.17.0",
    "lighthouse-ci": "git+https://github.com/ebidel/lighthouse-ci.git",
    "now": "^11.2.3",
    "prettier": "^1.13.5",
    "size-limit": "^0.18.2",
    "webpagetest": "^0.3.8"
  },
  "keywords": [
    "gatsby"
  ],
  "now": {
    "name": "jcofman",
    "alias": "jcofman.now.sh"
  },
  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --trailing-comma es5 --no-semi --single-quote --write 'src/**/*.js'",
    "start": "serve public/",
    "test": "bundlesize && size-limit",
    "deploy": "now --public -e NODE_ENV=production --token $NOW_TOKEN --yarn",
    "alias": "now alias --token=$NOW_TOKEN",
    "lh": "lighthouse-ci --score=90"
  },
  "bundlesize": [
    {
      "path": "./public/component*.js",
      "maxSize": "55 kB"
    },
    {
      "path": "./public/*.css",
      "maxSize": "10 kB"
    }
  ],
  "size-limit": [
    {
      "path": "./public/*.js",
      "webpack": false,
      "limit": "250 KB"
    }
  ]
}
