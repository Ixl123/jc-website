{
  "name": "jacob-website",
  "description": "Jacob's personal website",
  "version": "1.0.0",
  "author": "Jacob Cofman <cofman.jacob@gmail.com>",
  "dependencies": {
    "gatsby": "^1.9.255",
    "gatsby-cli": "^1.1.51",
    "gatsby-link": "^1.6.41",
    "gatsby-plugin-react-helmet": "^2.0.11",
    "gatsby-plugin-sass": "^1.0.26",
    "gatsby-source-filesystem": "^1.5.34",
    "gatsby-transformer-remark": "^1.7.40",
    "react-helmet": "^5.2.0",
    "serve": "^6.5.6",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "bundlesize": "^0.17.0",
    "@octokit/rest": "^15.2.6",
    "lighthouse-ci": "git+https://github.com/ebidel/lighthouse-ci.git",
    "now": "^11.1.7",
    "prettier": "^1.12.1",
    "size-limit": "^0.17.0",
    "webpagetest": "^0.3.8"
  },
  "keywords": ["gatsby"],
  "now": {
    "name": "jcofman",
    "alias": "jcofman.now.sh"
  },
  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format":
      "prettier --trailing-comma es5 --no-semi --single-quote --write 'src/**/*.js'",
    "start": "serve public/",
    "test": "bundlesize && size-limit",
    "deploy": "now --public -e NODE_ENV=production --token $NOW_TOKEN --yarn",
    "alias": "now alias --token=$NOW_TOKEN",
    "lh": "lighthouse-ci --score=90"
  },
  "bundlesize": [
    {
      "path": "./public/component*.js",
      "maxSize": "55 kB"
    },
    {
      "path": "./public/*.css",
      "maxSize": "10 kB"
    }
  ],
  "size-limit": [
    {
      "path": "./public/*.js",
      "webpack": false,
      "limit": "250 KB"
    }
  ]
}
